<div class="product-status mg-tb-15">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="product-status-wrap">
                            <h4>Staff List</h4>
                            <div class="add-product">
                                <a href="/staff/add">Add Staff</a>
                            </div>
                              {{#if msg}}
	                                     <p>{{msg}}</p>
              {{/if}}
                              {{#if nmsg}}
	                                     <p>{{nmsg}}</p>
              {{/if}}
                            <table>
                                <tr>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Status</th>
                                    <th>Mobile no</th>
                                    <th>Gender</th>
                                    
                                     <th>Address</th>
                                    <th>Vech_Type</th>
                                    <th>Vech_no</th>
                                    <th>Lice_no</th>
                                     <th>City</th>
                                      <th>Country</th>
                                       

                                </tr>
                                {{#each datas}}
                                <tr>
                                    <td><img src="http://localhost:8000/{{this.image}}" alt="" /></td>
                                    <td>{{this.first_name}} {{this.last_name}}</td>
                                    <td>
                                        {{#if this.status}}
                                        <button class="pd-setting" style="background-color: green;">Active</button>
                                        {{else}}
                                        <button class="pd-setting" style="background-color: red;">Inactive</button>
                                        {{/if}}
                                        
                                    </td>
                                    <td>{{this.mobileno}}</td>
                                     <td>{{this.gender}}</td>
                                    <td>{{this.address}}</td>
                                    <td>{{this.vechicle_type}}</td>
                                    <td>{{this.vechicle_no}}</td>
                                    <td>{{this.license_no}}</td>
                                    <td>{{this.city}}</td>
                                    <td>{{this.country}}</td>
                                    <td>
                                        <form method="get" action="/staff/update/{{this._id}}">
                                        <button data-toggle="tooltip" title="Edit" class="pd-setting-ed"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button>
                                        </form>
                                        <form method="post" action="/staff/delete">
                                        <input type="text" name="id" value="{{this._id}}" hidden>
                                        <button data-toggle="tooltip" title="Trash" class="pd-setting-ed"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                                        </form> 
                                    </td>

                                </tr>
                                {{/each}}
                               
                            
                            </table>
                          
                        </div>
                    </div>
                </div>
            </div>
        </div>